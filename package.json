{
  "name": "qa-api",
  "version": "1.3.4",
  "description": "Questions and Answers Rest API",
  "main": "APP.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "start": "cross-env NODE_ENV=production node dist/APP.js",
    "start:dev": "cross-env NODE_ENV=development node dist/APP.js",
    "start:test": "cross-env NODE_ENV=test node dist/APP.js",
    "start:docker": "cross-env NODE_ENV=docker node dist/APP.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node APP.ts",
    "dev:test": "cross-env NODE_ENV=test nodemon --exec ts-node APP.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:clean": "rm -rf dist && tsc",
    "build:declaration": "tsc --declaration --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "code:check": "npm run lint:check && npm run format:check && npm run type-check",
    "code:fix": "npm run lint:fix && npm run format",
    "perf:env": "ts-node performance/start-test-environment.ts",
    "perf:setup": "k6 run performance/setup-test-users.ts",
    "perf:test": "ts-node performance/run-tests.ts",
    "perf:quick": "ts-node performance/run-tests.ts quick",
    "perf:load": "ts-node performance/run-tests.ts load",
    "perf:spike": "ts-node performance/run-tests.ts spike",
    "perf:stress": "ts-node performance/run-tests.ts stress",
    "perf:all": "ts-node performance/run-tests.ts all",
    "perf:i18n": "k6 run performance/tests/i18n-cache-test.ts",
    "analyze": "ts-node performance/analyze-results.ts",
    "analyze:latest": "ts-node performance/analyze-results.ts latest",
    "analyze:list": "ts-node performance/analyze-results.ts list",
    "analyze:compare": "ts-node performance/analyze-results.ts compare",
    "smtp:setup": "node scripts/smtp/setup-smtp.js",
    "smtp:setup:dev": "node scripts/smtp/setup-smtp.js dev",
    "smtp:setup:test": "node scripts/smtp/setup-smtp.js test",
    "smtp:setup:prod": "node scripts/smtp/setup-smtp.js prod",
    "smtp:setup:docker": "node scripts/smtp/setup-smtp.js docker",
    "test:websocket": "node scripts/run-tests.js",
    "test:monitoring": "jest tests/unit/services/WebSocketMonitorService.test.ts tests/integration/monitoring.test.ts tests/integration/websocket-client.test.ts --verbose",
    "db:migrate": "ts-node scripts/database-cli.ts migrate",
    "db:rollback": "ts-node scripts/database-cli.ts rollback",
    "db:seed": "ts-node scripts/database-cli.ts seed",
    "db:rollback-seeds": "ts-node scripts/database-cli.ts rollback-seeds",
    "db:setup": "ts-node scripts/database-cli.ts setup",
    "db:admin": "ts-node scripts/database-cli.ts admin",
    "db:status": "ts-node scripts/database-cli.ts status",
    "reindex:questions": "ts-node scripts/reindex-elasticsearch.ts questions",
    "reindex:answers": "ts-node scripts/reindex-elasticsearch.ts answers",
    "reindex:all": "ts-node scripts/reindex-elasticsearch.ts all",
    "seed:test-questions": "ts-node scripts/seed-test-questions.ts"
  },
  "keywords": [
    "express",
    "rest api"
  ],
  "author": "Mert Baran",
  "license": "MIT",
  "dependencies": {
    "@react-oauth/google": "^0.12.2",
    "@sentry/node": "^7.120.4",
    "@sentry/profiling-node": "^1.3.5",
    "@types/uuid": "^10.0.0",
    "amqplib": "^0.10.3",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "google-auth-library": "^10.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "minimist": "^1.2.8",
    "mongoose": "^8.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "slugify": "^1.6.6",
    "tsyringe": "^4.10.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/minimist": "^1.2.5",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.4",
    "nodemon": "^3.1.9",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-expressions": "error",
      "prettier/prettier": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-non-null-assertion": "warn",
      "no-console": "warn",
      "no-debugger": "error",
      "no-alert": "error",
      "no-var": "error",
      "prefer-const": "error",
      "@typescript-eslint/no-empty-function": "off"
    },
    "ignorePatterns": [
      "dist/",
      "node_modules/",
      "*.js",
      "*.d.ts",
      "coverage/",
      "build/"
    ]
  }
}
